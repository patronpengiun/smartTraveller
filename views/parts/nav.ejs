<nav class="navbar navbar-default" id="nav-top">
	<div class="navbar-header">
		<div class="navbar-brand">旅橙网</div>
	</div>
	<form class="navbar-form navbar-left" method="GET" action="/guidelist">
		<div class="form-group">
			<input class="form-control" name="city" placeholder="Destination" type="text" id="destination">
		</div>
		<div class="form-group">
			<input class="form-control" name="startDate" placeholder="Start Date" type="text" id="start-date">
		</div>
		<div class="form-group">
			<input class="form-control" name="endDate" placeholder="End Date" type="text" id="end-date">
		</div>
		<button class="btn btn-default" type="submit">Submit</button>
	</form>
	<div id="login-control" <% if (user) {%> class="hidden" <% } %>>
		<button class="btn btn-default navbar-btn pull-right" data-toggle="modal" data-target="#signup-modal">注册</button>
		<button class="btn btn-default navbar-btn pull-right" data-toggle="modal" data-target="#login-modal">登陆</button>
	</div>
	<ul id="user-control" class="nav navbar-nav pull-right <% if (!user) {%>hidden<% } %>">
		<li class="dropdown">
			<a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button">
				<span id="user-display"><% if (user) {%><%=user.username%><% } %></span>
				<span class="caret"></span>
			</a>
		</li>
	</ul>
</nav>

<div class="modal fade" id="login-modal">
	<div class="modal-dialog login-modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<span class="modal-title">请登录</span>
				<button class="close" data-dismiss="modal">&times;</button>
			</div>
			<div class="modal-body">
				<div class="error-wrapper">
					您输入的邮箱或密码有误，请重新登录
				</div>
				<div id="login-div">
					<input type="text" id="login-username" class="form-control" placeholder="邮箱"></input>
					<input type="password" id="login-password" class="form-control" placeholder="密码"></input>
					<input type="button" id="login-btn" class="btn btn-default" value="登录"></input>
				</div>
			</div>
			<div class="modal-footer">
			</div>
		</div>
	</div>
</div>
		
<div class="modal fade" id="signup-modal">
	<div class="modal-dialog login-modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<span class="modal-title">请注册</span>
				<button class="close" data-dismiss="modal">&times;</button>
			</div>
			<div class="modal-body">
				<div class="error-wrapper">
					您输入的邮箱已注册，请重新注册
				</div>
				<div id="signup-div">
					<input type="text" id="signup-username" class="form-control" placeholder="邮箱"></input>
					<input type="password" id="signup-password" class="form-control" placeholder="密码"></input>
					<input type="button" id="signup-btn" class="btn btn-default" value="注册"></input>
				</div>
			</div>
			<div class="modal-footer">
			</div>
		</div>
	</div>
</div>