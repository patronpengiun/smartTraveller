<!DOCTYPE html>
<html lang="en">    <!-- Need or not ?????? -->

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Dashboard</title>

    <!-- Bootstrap Core CSS -->
    <link href="/style/bootstrap.min.css" rel="stylesheet">
    <!-- Custom CSS -->
    <link href="/style/simple-sidebar.css" rel="stylesheet">
    <link href="/style/guide_dashboard.css" rel="stylesheet">
    <script src="/js/jquery.js"></script>
    <script src="/js/bootstrap.min.js"></script>
    <script src="/js/guide_dashboard.js"></script>

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->

</head>

<body>

    <div id="wrapper">

        <!-- Sidebar -->
        <div id="sidebar-wrapper">
            <ul class="sidebar-nav">
                <li class="sidebar-brand">
                    <p style="color: rgb(186, 186, 186);">
                        Guide Dashboard
                    <p>
                </li>
                <li>
                    <a href="#">Overall</a>
                </li>
                <li>
                    <a href="#">Orders</a>
                </li>
                <li>
                    <a href="#">Reviews</a>
                </li>
                <li>
                    <a href="#">Settings</a>
                </li>
            </ul>
        </div>
        <!-- /#sidebar-wrapper -->

        <!-- Page Content -->
        <div id="page-content-wrapper">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="control-panel">
                            <a class="btn btn-default hide-btn" id="menu-toggle"></a>
                        </div>
                        <div class="display-area">
                            <h1>Review from Tourists</h1>
                            <hr>

                            <div class="star-section">
                                <h2>评分：</h2>
                                <input id="review-rating-avg" type="hidden" value="<%= avgRating %>"></input>
                                <div id="review-star"></div>
                                <div class="star-score">
                                    分数：<%= avgRating %>
                                </div>
                            </div>
                            <hr>

                            <div id="review-box">
                            <% for (var i = 0; i < reviewList.length; i++) { %>
                            <div class="single-review">
                                <div class="review-icon">
                                    <!-- Need to change to reviewer's portrait later !!! -->
                                    <img id="reviewer-icon" src="/icon/anonymous.png">
                                </div>
                                <div class="review-text">
                                    <%= reviewList[i].review_text %>
                                </div>

                                <div class="review-date">
                                    <%= reviewList[i].reviewer_name %> - <%= reviewList[i].date %>
                                </div>
                            </div>
                            <hr>
                            <% } %>
                        </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- /#page-content-wrapper -->

    </div>
    <!-- /#wrapper -->

    <!-- Menu Toggle Script -->
    <script>
    $("#menu-toggle").click(function(e) {
        e.preventDefault();
        $("#wrapper").toggleClass("toggled");
    });
    </script>

</body>

</html>
